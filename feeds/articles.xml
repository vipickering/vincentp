---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
<channel>
    <title>{{ site.title | xml_escape }} (Just the Articles)</title>
     <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}</link>
    <managingEditor>{{site.data.author.email}} ({{site.data.author.name}})</managingEditor>
    <webMaster>{{site.data.author.email}} ({{site.data.author.name}})</webMaster>
    <image>
        <url>{{site.url}}/images/vincentp.jpg</url>
        <title>{{ site.url }}</title>
        <link>{{ site.url }}</link>
    </image>
    <atom:link href="{{ site.url }}/feeds/articles.xml" rel="self" type="application/rss+xml"/>
    {% for post in site.categories.Articles limit:10 %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <link>{{ post.url | prepend: site.url }}</link>
        <description><![CDATA[{{ post.content | xml_escape }}]]></description>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <link rel="hub"  href="https://vincentp.superfeedr.com/" xmlns="http://www.w3.org/2005/Atom" />
        <link rel="self" href="https://vincentp.me/feeds/lifestream.xml" xmlns="http://www.w3.org/2005/Atom" />
        <guid isPermaLink="true">{{ post.url | prepend: site.url }}</guid>
        {% for tag in post.tags %}
        <category>{{tag}}</category>
        {% endfor %}
      </item>
    {% endfor %}
  </channel>
</rss>
